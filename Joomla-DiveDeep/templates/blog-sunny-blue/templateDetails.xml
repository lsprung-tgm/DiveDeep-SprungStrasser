<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>blog-sunny-blue</name>
	<version>1.0</version>
	<creationDate>02 February 2015</creationDate>
	<author>SiteGround</author>
	<authorEmail>hristo.p@siteground.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2014 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>TPL_BLOG-SUNNY-BLUE_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templates.php</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>functions</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>search</position>
		<position>header</position>
		<position>left</position>
		<position>right</position>
		<position>boxes</position>
		<position>top</position>
		<position>middle</position>
		<position>bottom</position>
		<position>debug</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_blog-sunny-blue.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_blog-sunny-blue.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
				
			<fieldset name="advanced">
				<field name="logoFile" class="" type="media" default=""
					label="TPL_BLOG-SUNNY-BLUE_LOGO_LABEL"
					description="TPL_BLOG-SUNNY-BLUE_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_BLOG-SUNNY-BLUE_FONT_LABEL"
					description="TPL_BLOG-SUNNY-BLUE_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_BLOG-SUNNY-BLUE_FONT_NAME_LABEL"
					description="TPL_BLOG-SUNNY-BLUE_FONT_NAME_DESC" />

			</fieldset>
		</fields>
	</config>
</extension>
